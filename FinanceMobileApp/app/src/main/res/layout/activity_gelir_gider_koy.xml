<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#E37200"
    tools:context=".GelirGiderKoy">


    <Button
        android:id="@+id/btnGider"
        android:layout_width="125dp"
        android:layout_height="102dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="57dp"
        android:backgroundTint="#FF8000"
        android:text="Gider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGelir"
        android:layout_width="125dp"
        android:layout_height="103dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="75dp"
        android:backgroundTint="#FF8000"
        android:text="Gelir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="111dp"
        android:layout_height="22dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="91dp"
        android:text="Tür Seciniz"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGelir" />

    <Spinner
        android:id="@+id/spnTür"
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/btnGider" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginTop="38dp"
        android:text="Tutar Giriniz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/eTxtTutar"
        android:layout_width="132dp"
        android:layout_height="44dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="57dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.346"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/spnTür" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginTop="38dp"
        android:text="Acıklama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/eDTxtDetay"
        android:layout_width="135dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="56dp"
        android:ems="10"
        android:hint="Opsiyonel"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eTxtTutar" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginTop="30dp"
        android:text="Fotograf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <ImageButton
        android:id="@+id/imgBtnFoto"
        android:layout_width="60dp"
        android:layout_height="46dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="128dp"
        android:backgroundTint="#FAFAFA"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eDTxtDetay"
        app:srcCompat="@drawable/camera" />

    <Button
        android:id="@+id/btnKaydet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="92dp"
        android:backgroundTint="#FF8000"
        android:text="Kaydet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imgVFoto"
        android:layout_width="134dp"
        android:layout_height="151dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginTop="20dp"
        android:text="Tarih"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/txtVTarih"
        android:layout_width="83dp"
        android:layout_height="20dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/imgBtnFoto" />

    <ImageButton
        android:id="@+id/imgBtnTarihSecim"
        android:layout_width="53dp"
        android:layout_height="51dp"
        android:backgroundTint="#FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/txtVTarih"
        app:layout_constraintStart_toEndOf="@+id/txtVTarih"
        app:layout_constraintTop_toTopOf="@+id/txtVTarih"
        app:srcCompat="@drawable/calendar" />

    <Button
        android:id="@+id/btnNakit"
        android:layout_width="74dp"
        android:layout_height="45dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#FF8000"
        android:text="Nakit"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/btnGelir"
        app:layout_constraintTop_toBottomOf="@+id/btnGelir" />

    <Button
        android:id="@+id/btnKredi"
        android:layout_width="74dp"
        android:layout_height="45dp"
        android:layout_marginStart="44dp"
        android:backgroundTint="#FF8000"
        android:text="Kredi Kartı"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnNakit"
        app:layout_constraintStart_toEndOf="@+id/btnNakit"
        app:layout_constraintTop_toTopOf="@+id/btnNakit"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnBanka"
        android:layout_width="74dp"
        android:layout_height="45dp"
        android:layout_marginStart="44dp"
        android:backgroundTint="#FF8000"
        android:text="Hesap Kartı"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnKredi"
        app:layout_constraintEnd_toEndOf="@+id/btnGider"
        app:layout_constraintStart_toEndOf="@+id/btnKredi" />

</androidx.constraintlayout.widget.ConstraintLayout>